{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "hxml",
            "file": "build.hxml",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "haxe",
            "args": "active configuration",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ]
        },
        {
            "type": "npm",
            "script": "build",
            "group": "build"
        },
        {
            "type": "npm",
            "script": "start",
            "group": "build"
        }
    ]
}